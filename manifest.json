{
	"name": "Movie Downloader for IMDB",
	"short_name": "Movie Downloader for IMDB",
	"version": "1.3.0",
	"manifest_version": 2,
	"description": "Show download links on IMDB movie pages",
	"homepage_url": "http://robblewis.me/projects/movie-downloader-chrome",
	"browser_action": {
		"default_icon": {
			"19": "icons/icon19.png"
		},
		"default_popup": "options/options.html"
	},
	"content_scripts": [{
		"matches": [
			"http://www.imdb.com/title/*",
			"https://imdb.com/title/*",
			"http://www.imdb.com/name/*",
			"https://imdb.com/name/*"
		],
		"css": ["download.css"],
		"js": ["js/jquery.min.js", "js/background.js"],
		"run_at" : "document_idle"
	}],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"options_page": "options/options.html",
	"permissions": [
		"https://imdb.com/title/*",
		"http://imdb.com/title/*",
		"storage"
	]
}